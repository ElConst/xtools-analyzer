<Window x:Class="XToolsAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XToolsAnalyzer"
        xmlns:vm="clr-namespace:XToolsAnalyzer.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="{StaticResource UltraLightBrush}">

    <Window.DataContext>
        <vm:MainVM/>
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock Style="{StaticResource Header}" VerticalAlignment="Center" Margin="4">
            Тип анализа
        </TextBlock>
        <ListBox Name="AnalysesListBox" Grid.Row="1" Background="{StaticResource DarkBrush}" ItemsSource="{Binding Analyses}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button Style="{StaticResource AnalysisTypeBtn}" Width="185" Content="{Binding Path=Name}" Command="{Binding Path=ResultsCommand}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock Style="{StaticResource Header}" Grid.Column="1" VerticalAlignment="Center" Margin="4">
            Фильтр
        </TextBlock>
        <WrapPanel Grid.Column="1" Grid.Row="1" Background="{StaticResource MediumBrush}"></WrapPanel>

        <TextBlock Style="{StaticResource Header}" Grid.Column="2" VerticalAlignment="Center" Margin="4">
            Результаты анализа
        </TextBlock>
        <ListBox Name="ResultsListBox" Grid.Row="1" Grid.Column="2" Background="{StaticResource LightBrush}" ItemsSource="{Binding ToolsStatistics}">
            <!--<ListBox.DataContext>
                <vm:AnalysisResultsVM/>
            </ListBox.DataContext>-->
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource AnalysisElementBorder}">
                        <DockPanel Width="255" LastChildFill="False">
                            <TextBlock Style="{StaticResource NormalText}" Text="{Binding Path=Name}" DockPanel.Dock="Left" Width="200"/>
                            <TextBlock Style="{StaticResource NormalText}" Text="{Binding Path=Statistic}" DockPanel.Dock="Right"/>
                        </DockPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
