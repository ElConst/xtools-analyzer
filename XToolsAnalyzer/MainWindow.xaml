<Window x:Class="XToolsAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XToolsAnalyzer"
        xmlns:vm="clr-namespace:XToolsAnalyzer.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="{StaticResource UltraLightBrush}">

    <Window.DataContext>
        <vm:MainVM/>
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="165"/>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition MinWidth="400"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock Style="{StaticResource Header}" VerticalAlignment="Center" Margin="4">
            Тип анализа
        </TextBlock>
        <ListBox Name="AnalysesListBox" Grid.Row="1" Background="{StaticResource DarkBrush}" ItemsSource="{Binding Analyses}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button Style="{StaticResource AnalysisTypeBtn}" Width="150"
                            Content="{Binding Path=Name}" Command="{Binding Path=ResultsCommand}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock Style="{StaticResource Header}" Text="Фильтр"
                   Grid.Column="1" VerticalAlignment="Center" Margin="4"/>
        <WrapPanel Grid.Column="1" Grid.Row="1" Background="{StaticResource MediumBrush}"></WrapPanel>

        <DockPanel Grid.Column="2" LastChildFill="False">
            <TextBlock Style="{StaticResource Header}" Text="Результаты анализа"
                       VerticalAlignment="Center" Margin="4"/>

            <ComboBox ItemsSource="{Binding SortTypes}" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="0 0 10 0"
                      SelectedItem="{Binding SelectedSort, Mode=TwoWay}"/>

            <TextBlock Style="{StaticResource NormalText}" Text="Сортировка"
                       VerticalAlignment="Center" DockPanel.Dock="Right" Margin="4"/>
        </DockPanel>
        <local:ResultsView Grid.Row="1" Grid.Column="2" Margin="0 0 10 0"/>
    </Grid>
</Window>
