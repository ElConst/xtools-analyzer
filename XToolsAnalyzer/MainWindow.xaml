<Window x:Class="XToolsAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XToolsAnalyzer"
        xmlns:vm="clr-namespace:XToolsAnalyzer.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="{StaticResource UltraLightBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock Style="{StaticResource Header}" Grid.Row="0" Grid.Column="0" 
                   VerticalAlignment="Center" Margin="4">
            Тип анализа
        </TextBlock>
        
        <WrapPanel Grid.Column="0" Grid.Row="1" Background="{StaticResource DarkBrush}">
            <Button Style="{StaticResource AnalysisTypeBtn}" Width="200">
                Тип анализа 1
            </Button>
        </WrapPanel>
    </Grid>
</Window>
