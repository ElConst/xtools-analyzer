<UserControl x:Class="XToolsAnalyzer.ResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XToolsAnalyzer"
             xmlns:vm="clr-namespace:XToolsAnalyzer.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:ResultsViewVM/>
    </UserControl.DataContext>
    
    <ListBox Name="ResultsListBox" Background="{StaticResource LightBrush}" ItemsSource="{Binding ToolsStatistics}">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Border Style="{StaticResource AnalysisElementBorder}">
                    <DockPanel Width="255" LastChildFill="False">
                        <TextBlock Style="{StaticResource NormalText}" Text="{Binding Path=Name}" DockPanel.Dock="Left" Width="200"/>
                        <TextBlock Style="{StaticResource NormalText}" Text="{Binding Path=Statistic}" DockPanel.Dock="Right"/>
                    </DockPanel>
                </Border>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>
